<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageShadowSizeRv"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="#88D9FA"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="invisible"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/imageColorSizeRv"
        android:layout_width="21dp"
        android:layout_height="21dp"
        android:src="@color/g_gray500"
        app:layout_constraintStart_toStartOf="@id/imageShadowSizeRv"
        app:layout_constraintTop_toTopOf="@id/imageShadowSizeRv"
        app:layout_constraintEnd_toEndOf="@id/imageShadowSizeRv"
        app:layout_constraintBottom_toBottomOf="@id/imageShadowSizeRv"/>

    <TextView
        android:id="@+id/tvSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_picked_white"
        app:layout_constraintStart_toStartOf="@id/imageColorSizeRv"
        app:layout_constraintEnd_toEndOf="@+id/imageColorSizeRv"
        app:layout_constraintTop_toTopOf="@+id/imageColorSizeRv"
        app:layout_constraintBottom_toBottomOf="@id/imageColorSizeRv"
        android:text="41"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>